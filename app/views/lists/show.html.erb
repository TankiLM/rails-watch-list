<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
  <h2><%= bookmark.movie.title %></h2>
  <p><%= bookmark.movie.overview %></p>
  <p><%= bookmark.movie.rating %></p>
  <img src= "<%= bookmark.movie.overview %>"/>
  <%= link_to 'Delete this bookmark', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }  %>
<% end %>

<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
