<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new list</h3>
            <%= form_for(@list) do |f| %>
              <%= f.label :name %>
              <%= f.text_field :name %>
              <%= f.submit %>
            <% end %>
      </div>
    </div>
  </div>
</div>
